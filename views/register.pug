.reg-container.container
  h1.h1-responsive.text-xs-center Sign Up
  form.reg-form.py-1(method='POST', action='/register')
    .form-inline
      .md-form.form-group
        input#email.form-control(type='email', name='email')
        |  
        label(for='email') Email Address
      .md-form.form-group
        input#confirmEmail.form-control(type='email', name='confirmEmail')
        |  
        label(for='confirmEmail') Confirm email
    .form-inline
      .md-form.form-group
        input#pwd.form-control(type='password', name='pwd')
        |  
        label(for='pwd') Create Password
      .md-form.form-group
        input#confirmPwd.form-control(type='password', name='confirmPwd')
        |  
        label(for='confirmPwd') Re-enter password
    .md-form.form-group
      input#hiking.form-control(type='text', name='hiking')
      |  
      label(for='hiking') Do you want to go hiking?(Yes/No)
    |  
    a.btn.btn-primary.btn-submit.pt-1.float-sm-right(type='submit') Submit
